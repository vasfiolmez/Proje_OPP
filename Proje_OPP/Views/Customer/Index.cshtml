@using Proje_OPP.Entity
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<table class="table table-bordered">

    <tr>

        <td>#</td>
        <td>Müşteri Adı </td>
        <td>Şehir </td>
        <td>Sil </td>
        <td>Güncelle </td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Customer/AddCustomer" class=" btn btn-primary">Yeni Müşteri Girişi</a>

